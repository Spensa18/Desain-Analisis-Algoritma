#include <iostream>
#include <bits/stdc++.h>

using namespace std;

int LCS(char* x, char* y, int m, int n){
    int L[m + 1][n + 1];
    char K[m + 1][n + 1];
    int i, j;

    //Looping untuk mencari nilai LCS
    for(i = 0; i <= m; i++){
        for(j = 0; j <=n; j++){
            //Untuk membuat 
            if(i == 0 || j == 0){
                L[i][j] = 0;
                K[i][j] = ' ';
            }else if(x[i - 1] == y[j - 1]){
                L[i][j] = L[i - 1][j - 1] + 1;
                K[i][j] = '\\'; 
            }else{
                L[i][j] = max(L[i-1][j], L[i][j - 1]);
                if (L[i-1][j] >= L[i][j-1]){ //untuk panahnya pada matriks
                    K[i][j] = '^';
                }
		    	else{ 
                    K[i][j] = '<';
                }
            }
                
        }
    }

    //Looping untuk tabel C
    cout <<"\t\t\t TABEL C \t"<<endl;
    for(int i = 0; i <= m ; i++){
        cout <<endl;
        for(int j = 0; j <=n; j++ ){
            cout << L[i][j] <<"\t";
        }
        cout <<endl;
    }

    //Looping untuk tabel B
    cout <<"\t\t\t TABEL B \t"<<endl;
    for(int i = 0; i <= m; i++){
        cout << endl;
        for(int j = 0; j <=n; j++){
            cout << K[i][j] <<"\t";
        }
        cout << endl;
    }
    cout << endl;
    return L[m][n];

}

int max(int a, int b){
    return (a > b) ? a : b;
}

int main(){
    char x[] = "BDCABA";//BDCABA
    char y[] = "ABCBDAB";//ABCBDAB
    int m = strlen(x);
    int n = strlen(y);

    

    cout <<"Ukuran LCS adalah "<< LCS(x, y, m, n);

    return 0;
}
